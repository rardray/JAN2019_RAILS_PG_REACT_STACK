<%= semantic_form_for [:admin, @ingredient], builder: Formtastic::FormBuilder do |f| %>
    <%= f.semantic_errors %>
    <%= f.inputs do %>
        <%= f.input :drink_id, as: :select, collection: Hash[Drink.all.collect{|r| [r.title, r.id]}], include_blank: false  %>
        <%= f.input :description %>
    <% end %>
    <%= f.actions %>
<% end %>